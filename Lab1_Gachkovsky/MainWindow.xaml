<Window x:Class="Lab1_Gachkovsky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_Gachkovsky"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Информационная подсистема ведения клиентов – юридических лиц" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem x:Name="Company" Header="Физические лица" Click="Company_OnClick"></MenuItem>
            <MenuItem x:Name="Person" Header="Клиенты" Click="Person_OnClick"></MenuItem>
            <MenuItem x:Name="OrgRegistration" Header="Органы регистрации" Click="OrgRegistration_OnClick"></MenuItem>
            <MenuItem x:Name="OrgLegForm" Header="Организационно-правовые формы" Click="OrgLegForm_OnClick"></MenuItem>
        </Menu>

    </Grid>
</Window>
