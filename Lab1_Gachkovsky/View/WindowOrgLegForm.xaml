<Window x:Class="Lab1_Gachkovsky.View.WindowOrgLegForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_Gachkovsky.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Организационно-правовая форма" Height="450" Width="800">
    <StackPanel>
        <ListView x:Name="ListOrgLegForm">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Код" 
                         DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Полное наименование" 
                         DisplayMemberBinding="{Binding NameFull}"/>
                        <GridViewColumn Header="Краткое название" 
                         DisplayMemberBinding="{Binding NameShort}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
